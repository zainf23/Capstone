<form asp-page="=BookmarkUser">
    <br />
    <h2 style="color: #450084;">Bookmark User</h2>
    <input type="hidden" asp-for="mainUserID" placeholder="User ID" />
    <input type="hidden" asp-for="otherUserID" placeholder="Other User ID" />
    <div class="form-group">
        <label asp-for="reason">Reason for Bookmarking</label>
        <textarea class="form-control" asp-for="reason" required rows="3"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-purple"> Bookmark -> </button>
    <a asp-page="Index" class="btn btn-warning">Cancel</a>
</form>