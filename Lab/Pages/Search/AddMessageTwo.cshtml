@page
@model Lab.Pages.Search.AddMessageTwoModel
@{
    ViewData["Title"] = "Send a Message";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@100&family=Arvo&display=swap" rel="stylesheet">

<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="AddMessageTwo">
                            <br />
                            <h2 class="text-center" style="color: #450084;">Send a Message</h2>
                            <label asp-for="subject">Subject</label>
                            <br />
                            <input type="text" asp-for="subject" required placeholder="Subject" />
                            <br />
                            <label asp-for="recipient">Recipient</label>
                            <br />
                            <input type="text" asp-for="recipient" required placeholder="Recipient" />
                            <br />
                            <label asp-for="messageInfo">Message</label>
                            <br />
                            <div class="form-group">
                                <textarea class="form-control" asp-for="messageInfo" rows="3" required placeholder="Message"></textarea>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-purple">Send Message -> </button>
                            <a asp-page="/Search/ViewProject" class="btn btn-warning" asp-route-projectid="@Model.projectID">Cancel</a>
                            <input type="hidden" asp-for="projectID" placeholder="Project ID" />
                            <br />
                            <input type="hidden" asp-for="userID" placeholder="User ID" />
                            <br />
                            <input type="hidden" asp-for="fullName" placeholder="Sender" />
                            <br />


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>