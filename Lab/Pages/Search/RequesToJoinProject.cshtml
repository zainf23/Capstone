@page
@model Lab.Pages.Search.RequesToJoinProjectModel
@{
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@500&family=Arvo&display=swap" rel="stylesheet">

<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="=RequesToJoinProject">
                            <br />
                            <h2 class="text-center" style="color: #450084;">Invite To Project</h2>

                            <input type="hidden" asp-for="userID" placeholder="User ID" />

                            <label asp-for="projectID">Project</label>
                            <br />
                            <select asp-for="projectID" asp-items="Model.Projects" required>
                                <option value="">Choose a Project</option>
                            </select>
                            <br />
                            <input type="hidden" asp-for="teamID" placeholder="Team ID" />

                            <div class="form-group">
                                <label asp-for="@Model.userPitch">Write about why they should join your Project!</label>
                                <textarea class="form-control" asp-for="@Model.userPitch" required rows="3"></textarea>
                            </div>

                            <br />
                            <button type="submit" class="btn btn-purple">Request -> </button>
                            <a asp-page="Index" class="btn btn-warning">Cancel</a>
                            @{
                                if (ViewData["ErrorMessage"] != null)
                                {
                                    <p class="text-danger text-align right" align="center">@ViewData["ErrorMessage"].ToString()</p>
                                }
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


