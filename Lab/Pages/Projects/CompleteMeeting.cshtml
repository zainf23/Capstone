@page
@model Lab.Pages.Projects.CompleteMeetingModel
@{
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@100&family=Arvo&display=swap" rel="stylesheet">

<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="CompleteMeeting">
                            <br />
                            <h2 class="text-center" style="color: #450084;">Complete Team Meeting</h2>
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.teamMeetingID" placeholder="userID" />
                                <label asp-for="@Model.meetingSummary">Write about what team discussed!</label>
                                <textarea class="form-control required" asp-for="@Model.meetingSummary" required rows="3"></textarea>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-purple">Complete Meeting -> </button>
                            <a asp-page="ViewProjects" class="btn btn-warning" asp-route-projectid="@Model.projectID">Cancel</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>