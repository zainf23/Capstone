@page
@model Lab.Pages.Projects.projectsearchModel
@{
}

<br />
<form asp-page="projectsearch">
    <div class="input-group">
        <input type="search" asp-for="SearchString" class="form-control rounded" placeholder="Search for Project" aria-label="Search" aria-describedby="search-addon" />
        <button type="submit" class="btn btn-purple">search</button>
    </div>
</form>
<br />

@{
    if (Model.SearchString != null)
    {
        <h2 class="h2">Projects:</h2>
        <table class="table table-bordered table-responsive table triped table-hover" style="background-color:#FFFFFF">
            <thead class="table-dark">
                <tr>
                    <th class="">Project Name:</th>
                    <th class="">Project Owner:</th>
                    <th class="">Project Description:</th>
                    <th class="">View Project:</th>

                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var prod in Model.ProjectSearchList)
                    {
                        <tr>

                            <td>@prod.projectName</td>
                            <td>@prod.projectOwner</td>
                            <td>@prod.projectDescription</td>
                            <td>
                                <a asp-page="ViewProjects" class="btn btn-purple" asp-route-projectid="@prod.projectID">View Project</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}