@page
@model Lab.Pages.Projects.RequestJoinModel
@{
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@500&family=Arvo&display=swap" rel="stylesheet">

<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="RequestJoin">
                            <h2 class="text-center" style="color: #450084;">Request To Join a Project</h2>
                            <input type="hidden" asp-for="@Model.userID" placeholder="userID" />
                            <input type="hidden" asp-for="@Model.projectID" placeholder="projectID" />
                            <input type="hidden" asp-for="@Model.teamID" placeholder="teamID" />
                            <div class="form-group">
                                <label asp-for="@Model.userPitch">Write about why you would make a great addition to the Project</label>
                                <textarea class="form-control" asp-for="@Model.userPitch" required rows="3"></textarea>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-purple">Request -> </button>
                            <a asp-page="projectsearch" class="btn btn-warning">Cancel</a>

                            @{
                                if (ViewData["ErrorMessage"] != null)
                                {
                                    <h5 class="text-danger text-align right" align="center">@ViewData["ErrorMessage"].ToString()</h5>
                                }
                            }

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>