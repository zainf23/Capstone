@page
@model Lab.Pages.Login.HashedLoginModel
@{
}
@{
    Layout = null;
}
<body style="background-color: indigo">
<form asp-page="HashedLogin">
    <div align="center">
    <img src="~/Images/MadisonConnectHubLogo.png" width="250" height="150">
    <input asp-for="username" class="form-control" placeholder="Enter Username" style="width:300px" >
    <br/>
    <input asp-for="passphrase" class="form-control" placeholder="Enter Password" type="password" style="width:300px" />
    <br/>
    <a class="btn btn-primary" asp-area="" type="submit">Sign in</a>
    <hr size="2" width=30% />
            <p style ="color:white">Are you new?</p>
            <a class="btn btn-primary" asp-area="" asp-page="/Login/CreateHashedLogin">Create User</a>
</form>
<br />

    </div>
</body>
@{
    if (HttpContext.Session.GetString("username") != null)
    {
        <p class="text-success">@ViewData["LoginMessage"]</p>
    }
    else
    {
        <p class="text-danger">@ViewData["LoginMessage"]</p>
    }
}

@{
    if (ViewData["ErrorMessage"] != null)
    {
        <p class="text-danger">@ViewData["ErrorMessage"].ToString()</p>
    }
}
