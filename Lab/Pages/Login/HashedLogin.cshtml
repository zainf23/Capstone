    <input asp-for="passphrase" class="form-control" placeholder="Enter Password" type="password" style="width:300px" />
    <br/>
            <input type="submit" value="Log in" class="btn btn-purple"/>
    <hr size="2" width=30% />
            <p style ="color:white">Are you new?</p>
            <a class="btn btn-purple" asp-area="" asp-page="/Login/CreateHashedLogin">Create User</a>
