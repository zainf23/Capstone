@page
@model Lab.Pages.Login.ChangePasswordModel
@{
}


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@100&family=Arvo&display=swap" rel="stylesheet">


<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="ChangePassword">
                            <br />
                            <h2 class = "text-center" style="color: #450084;">Security Questions</h2>


                            <label for="secQuestion">Choose which Security Question to Answer</label>
                            <br />
                            <select asp-for="secQuestion" required>
                                <option value="secQuestionMom">What is your Mother's Maiden Name?</option>
                                <option value="secQuestionPet">What was the name of your first pet?</option>
                                <option value="secQuestionParents">What city did your Parents meet in?</option>
                            </select>
                            <br />
                            <br />
                            <label asp-for="@Model.answer">Answer the Question you selected</label>
                            <br />
                            <input type="text" asp-for="@Model.answer" required placeholder="Enter Answer" />
                            <br />
                            <br />
                            <input type="submit" class="btn btn-purple" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    if (ViewData["ErrorMessage"] != null)
    {
        <p class="text-danger" align="center">@ViewData["ErrorMessage"].ToString()</p>
    }
}
