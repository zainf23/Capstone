@page
@model Lab.Pages.Messages.ReplyModel
@{
}



<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@100&family=Arvo&display=swap" rel="stylesheet">


<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="Reply">
                            <br />
                            <h2 class="text-center" style="color: #450084;">Reply to a Message</h2>
                            <input type="hidden" asp-for="@Model.userID" placeholder="userID" />

                            <input type="hidden" asp-for="@Model.otherUserID" placeholder="otherUserID" />
                            <br />
                            <div class="input-group">
                                <span class="input-group-text">First and last name</span>
                                <input type="text" asp-for="@Model.fName" required aria-label="First name" class="form-control">
                                <input type="text" asp-for="@Model.lName" required aria-label="Last name" class="form-control">
                            </div>


                            <label asp-for="@Model.Subject">Subject</label>
                            <br />
                            <input type="text" asp-for="@Model.Subject" required placeholder="Subject" />
                            <br />
                            <div class="form-group">
                                <label asp-for="@Model.message">Message</label>
                                <textarea class="form-control" asp-for="@Model.message" required rows="3"></textarea>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-purple">Send Message -> </button>
                            <a asp-page="Index" class="btn btn-warning" asp-route-userid="@Model.userID">Cancel</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>