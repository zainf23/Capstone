@page
@using System.Data.SqlClient
@using Lab.Pages.DB
@model Lab.Pages.Teams.ViewTeamsModel
@{
    ViewData["Title"] = @Model.ProjectTeam.teamName + "'s Profile";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@500&family=Arvo&display=swap" rel="stylesheet">



<h2 class="h2">Team Info</h2>
<table class="table table-bordered table-resposnive table triped table-hover" style="background-color:#FFFFFF">
    <thead class="table-dark">
        <tr>
            <th class="">Team Name</th>
            <th class="">Team Description</th>
            <th class="">Team Email Address</th>
            @*<th class="">Join Team</th>*@
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ProjectTeam.teamName</td>
            <td>@Model.ProjectTeam.teamDescription</td>
            <td>@Model.ProjectTeam.teamDescription</td>
            @*<td> 
                <a asp-page="JoinTeams" class="btn btn-purple" asp-route-teamid="@Model.ProjectTeam.teamID">Join Team</a>
            </td>*@

        </tr>
    </tbody>

</table>


<h2 class="h2">Project Info</h2>
<table class="table table-bordered table-resposnive table triped table-hover" style="background-color:#FFFFFF">
    <thead class="table-dark">
        <tr>
            <th class="">Project Name</th>
            <th class="">Project Owner</th>
            <th class="">Project Owner Email</th>
            <th class="">Project Mission Statement</th>
            <th class="">Project Description</th>
            <th class="">Project Start Date</th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var prod in Model.TeamList)
            {
                <tr>
                <td>@prod.projectName</td>
                <td>@prod.projectOwner</td>
                <td>@prod.projectOwnerEmail</td>
                <td>@prod.projectMissionStatement</td>
                <td>@prod.projectDescription</td>
                <td>@prod.projectDate</td>

            </tr>
            }
        }
    </tbody>

</table>

<h2 class="h2">Team Members:</h2>
<table class="table table-bordered table-responsive table triped table-hover" style="background-color:#FFFFFF">
    <thead class="table-dark">
        <tr>
            <th class="">Name</th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var prod in Model.UserList)
            {
                <tr>
                    <td>@prod.firstName @prod.secondName</td>
                </tr>
            }
        }
    </tbody>

</table>

