@page
@model Lab.Pages.Teams.AddTeamsModel
@{
    ViewData["Title"] = "Add Teams";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@500&family=Arvo&display=swap" rel="stylesheet">

<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="AddTeams">
                            <br />
                            <h2 class="text-center" style="color: #450084;">Create Team</h2>
                            <label asp-for="@Model.ProjectTeam.teamName">Team Name</label>
                            <br />
                            <input type="text" asp-for="ProjectTeam.teamName" required placeholder="Team Name" />
                            <br />
                            <label asp-for="@Model.ProjectTeam.teamName">Choose a Project</label>
                            <br />
                            <select asp-for="projectID" asp-items="Model.Projects" required>
                                <option value="">Choose a Project</option>
                            </select>
                            <br />
                            <br />
                            <button type="submit" class="btn btn-purple">Create Team -> </button>
                            @*<button class="btn btn-outline-primary" asp-page="AddTeams" asp-page-handler="PopulateHandler" formnovalidate>Populate</button>
                            <button class="btn btn-outline-primary" asp-page="AddTeams" asp-page-handler="ClearHandler" formnovalidate>Clear</button>*@

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
