@page
@using System.Data.SqlClient
@using Lab.Pages.DB
@model Lab.Pages.Users.EditUserSkillsModel
@{
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@500&family=Arvo&display=swap" rel="stylesheet">

<p>@ViewData["test"]</p>

<div class="m-4">
    <div class="card">
        <div class="card-header" style="background-color: #DACCE6">
            <ul class="nav nav-pills card-header-pills btn btn-purple1">
                <li class="nav-item">
                    <a href="#home" class="nav-link btn btn-purple" data-bs-toggle="tab"></a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="background-color: #DACCE6">
            <div class="tab-content">
                <div class="tab-pane fade show active" style="background-color: #DACCE6" id="home">
                    <div class="row">
                        <form asp-page="Edit">
                            <h2 class = "text-center" style="color: #450084;">Edit a Skill</h2>
                            <input type="hidden" asp-for="@Model.UserSkillToUpdate.userID" />
                            <input type="hidden" asp-for="@Model.skillPlaceHolder" />
                            <label asp-for="@Model.UserSkillToUpdate.skill">Skill</label>
                            <br />
                            <input type="text" asp-for="@Model.UserSkillToUpdate.skill" />
                            <br />
                            <label asp-for="@Model.UserSkillToUpdate.skillLevel">Skill Level</label>
                            <br />
                            <input type="text" asp-for="@Model.UserSkillToUpdate.skillLevel" />
                            <br />
                            <br />
                            <input type="submit" class="btn btn-purple" asp-route-userid="@HttpContext.Session.GetInt32("userid")" asp-page="ViewProfile" />
                            <a asp-page="ViewProfiles" class="btn btn-warning" asp-route-userid="@HttpContext.Session.GetInt32("userid")">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
